{
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "files.autoSave": "off",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "prettier.disableLanguages": ["js"],
  "window.zoomLevel": -2,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontSize": 17,
  "workbench.colorTheme": "Dark Knight Rises",
  "vscode_custom_css.imports": ["file:///home/fattylee/the-dark-knight.css"],
  "vscode_custom_css.policy": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "vim.easymotion": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>", ":", "w", "<Enter>"]
    },
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<Tab>"],
      "after": ["%"]
    },
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    }
  ],
  "vim.highlightedyank.enable": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.searchHighlightColor": "red",
  "vim.searchHighlightTextColor": "gold",
  "vim.useSystemClipboard": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.gdefault": true
}
